<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <title>CGUST 聊天機器人</title>
</head>
<body style="font-family: sans-serif; padding: 2em;">
  <h2>聊天機器人 🤖</h2>
  <input id="question" placeholder="請輸入問題..." style="width: 80%; padding: 0.5em;" />
  <button onclick="send()">送出</button>
  <pre id="response" style="white-space: pre-wrap; margin-top: 1em;"></pre>

 <script>
  async function send() {
    const input = document.getElementById("question").value;
    const out = document.getElementById("response");
    out.textContent = "處理中…";

    try {
      const res = await fetch("https://hungming.app.n8n.cloud/webhook/01ea6ee0-8db7-4bad-994f-f43191bf58b8", {
        method: "POST",
        headers: { "Content-Type": "application/json", "Accept": "application/json" },
        body: JSON.stringify({ query: input })
      });

      if (!res.ok) throw new Error(`伺服器錯誤：${res.status}`);

      const raw = await res.text();
      if (!raw || raw.trim() === "") {
        out.textContent = "（沒有回傳資料）";
        return;
      }

      let result = "";
      try {
        const data = JSON.parse(raw);
        result = data?.result ?? "";
      } catch {
        // 後端不是 JSON，就當純文字顯示
        result = raw;
      }

      if (!result) {
        out.textContent = "(無結果)";
        return;
      }

      // 若是 Markdown 圖片語法：![...](url)
      const mdImg = result.match(/!\[[^\]]*\]\(([^)]+)\)/);
      const imgUrl = mdImg ? mdImg[1] : (/^https?:\/\/.*quickchart\.io\/chart/.test(result) ? result : null);

      if (imgUrl) {
        out.innerHTML = `<img src="${imgUrl}" alt="chart" style="max-width:100%;">`;
      } else {
        out.textContent = result;
      }
    } catch (err) {
      out.textContent = "";
      alert("錯誤：" + err.message);
    }
  }
</script>
</body>
</html>
