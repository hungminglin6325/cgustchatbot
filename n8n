<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <title>CGUST 聊天機器人</title>
</head>
<body style="font-family: sans-serif; padding: 2em;">
  <h2>聊天機器人 🤖</h2>
  <input id="question" placeholder="請輸入問題..." style="width: 80%; padding: 0.5em;" />
  <button onclick="send()">送出</button>
  <pre id="response" style="white-space: pre-wrap; margin-top: 1em;"></pre>

 <script>
  // 產生或取用本地 sessionId
  const sid = localStorage.getItem('cgust_sid') || (()=>{
    const v = crypto.randomUUID ? crypto.randomUUID() : String(Date.now());
    localStorage.setItem('cgust_sid', v);
    return v;
  })();

  async function send() {
    const input = document.getElementById("question").value.trim();
    const out = document.getElementById("response");
    out.textContent = "處理中…";

    const res = await fetch("https://hungming.app.n8n.cloud/webhook/01ea6ee0-8db7-4bad-994f-f43191bf58b8", {
      method: "POST",
      headers: { "Content-Type": "application/json", "Accept": "application/json" },
      body: JSON.stringify({ query: input, sessionId: sid })
    });

    const raw = await res.text();
    out.textContent = raw || "（沒有回傳資料）";
    try { out.textContent = (JSON.parse(raw).result ?? raw) } catch {}
  }
</script>
</body>
</html>
